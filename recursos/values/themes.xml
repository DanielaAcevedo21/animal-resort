    <!-- Customize your theme here. -->
    <!-- </style>-->
    <style name="Theme.AnimalResort" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
       <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="windowActionBar">true</item>
             <item name="android:textColor">@color/textColorGris</item>
            <item name="windowNoTitle">true</item>
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
           <item name="colorAccent">@color/colorPrimary</item> <!--check-->
        <item name="colorOnSurface">@color/colorPrimary</item><!--check-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <item name="colorSurface">#000000</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:listViewStyle">@style/list_view</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyle</item>

    </style>
    <style name="customCheckBoxStyle" parent="@android:style/Widget.Holo.Light.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/coffe</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="buttonTint">@color/coffe</item>
    </style>

    <style name="Theme.AppCompat.DayNight.NoActionBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="materialCalendarFullscreenTheme">@style/MaterialCalendarTheme</item>
    </style>


    <style name="SpinnerItem">

    </style>

    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@color/textColorButtons</item>
        <item name="android:width">200dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/gothic</item>
    </style>

    <style name="list_view" parent="@android:style/Widget.ListView">
        <item name="android:divider">@color/colorPrimary</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="fontFamily">@font/gothic</item>
        <item name="android:background">@color/white</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="android:textColor">@color/textColorGris</item>
    </style>


    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">

        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">#FFFFFF</item>   <!--color de las letras en el calendario -->
        <item name="colorPrimary">#158808</item> <!-- color de las fechas seleccionadas  -->
        <!-- Header panel -->
        <item name="materialCalendarHeaderLayout">@style/MaterialCalendar.HeaderLayout1</item>
        <item name="materialCalendarFullscreenTheme">@style/MaterialCalendarTheme</item>
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/TextButton.Dialog1</item>
        <item name="android:textColor">@color/textColorGris</item>
        <item name="buttonBarNegativeButtonStyle">@style/TextButton.Dialog1</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">@color/textColorGris</item>
    </style>

    <style name="MaterialCalendar.HeaderLayout1" parent="Widget.MaterialComponents.MaterialCalendar.HeaderLayout">
        <!--<item name="android:background">?attr/colorPrimary</item>-->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:background">@color/colorPrimary</item> <!--Color fondo del texto arriba del calendario-->

    </style>
    <style name="TextButton.Dialog1" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#0C38DA</item> <!--nada sale de ese color-->
        <item name="backgroundTint">#BF0C6F</item><!--nada sale de ese color-->

    </style>

    <!-- Calendar -->
    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/textColorGris</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/textColorGris</item>
        <item name="android:weekNumberColor">@color/colorPrimary</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/textColorGris</item>
    </style>

    <style name="spinner_style">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:width">200dp</item>
        <item name="android:fontFamily">@font/gothic</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:textColor">@color/textColorButtons</item>
    </style>

    <style name="CalendarViewStyle" parent="@android:style/Widget.CalendarView">
        <item name="android:background">#FFFFFF</item> <!-- Fondo oscuro uniforme -->
        <item name="android:dateTextAppearance">@style/CalendarViewDateText</item> <!-- Estilo del texto de las fechas -->
        <item name="android:weekDayTextAppearance">@style/CalendarViewWeekDayText</item> <!-- Estilo del texto de los días de la semana -->
        <item name="android:selectedWeekBackgroundColor">@color/colorPrimary</item> <!-- Color de resalte de las fechas seleccionadas -->
        <item name="android:unfocusedMonthDateColor">#3F51B5</item> <!-- Color de las fechas de meses no seleccionados -->
        <item name="android:weekNumberColor">#FFFFFF</item> <!-- Color del número de la semana -->
    </style>

    <style name="CalendarViewDateText" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#FFFFFF</item> <!-- Color del texto de las fechas -->
        <item name="android:textSize">16sp</item> <!-- Tamaño del texto de las fechas -->
    </style>

    <style name="CalendarViewWeekDayText" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#BDBDBD</item> <!-- Color del texto de los días de la semana -->
        <item name="android:textSize">14sp</item> <!-- Tamaño del texto de los días de la semana -->
    </style>

    <!-- Estilo para el modo claro -->
    <style name="CalendarViewStyle.Light" parent="@android:style/Widget.CalendarView">
        <item name="android:background">#F5F5F5</item> <!-- Fondo claro uniforme -->
        <item name="android:dateTextAppearance">@style/CalendarViewDateText.Light</item> <!-- Estilo del texto de las fechas -->
        <item name="android:weekDayTextAppearance">@style/CalendarViewWeekDayText.Light</item> <!-- Estilo del texto de los días de la semana -->
        <item name="android:selectedWeekBackgroundColor">#FFA726</item> <!-- Color de resalte de las fechas seleccionadas -->
        <item name="android:unfocusedMonthDateColor">#BDBDBD</item> <!-- Color de las fechas de meses no seleccionados -->
        <item name="android:weekNumberColor">#212121</item> <!-- Color del número de la semana -->
    </style>

    <style name="CalendarViewDateText.Light" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#212121</item> <!-- Color del texto de las fechas -->
        <item name="android:textSize">16sp</item> <!-- Tamaño del texto de las fechas -->
    </style>

    <style name="CalendarViewWeekDayText.Light" parent="@android:style/TextAppearance.DeviceDefault">
        <item name="android:textColor">#757575</item> <!-- Color del texto de los días de la semana -->
        <item name="android:textSize">14sp</item> <!-- Tamaño del texto de los días de la semana -->
    </style>





</resources>