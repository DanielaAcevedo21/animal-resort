                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:padding="3dp"
                            android:text="Descuento diario: "
                            android:textColor="@color/textColorGris"
                            android:textSize="15dp" />

                        <TextView
