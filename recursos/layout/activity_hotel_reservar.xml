                            android:layout_marginLeft="10dp"
                            android:padding="3dp"
                            android:text="Precio diario: "
                            android:fontFamily="@font/gothic"
                            android:textColor="@color/textColorGris"
                            android:textSize="15dp" />

                        <TextView
