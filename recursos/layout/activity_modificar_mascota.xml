<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    tools:context=".ModificarMascotas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/white"
                    android:padding="2dp">

                    <ImageButton
                        android:id="@+id/mainMenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_menu_24dp"
                        android:elevation="10dp" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/estilo_descuentos1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pets_black" />

                <EditText
                    android:id="@+id/nombreAct"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/gothic"
                    android:hint="@string/nombre_mascota"
                    android:inputType="text"
                    android:letterSpacing="0.1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/textColorGris" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Selecciona el genero de tú mascota."
                    android:textColor="@color/Gris1"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_genero" />

                    <Spinner
                        android:id="@+id/generoAct"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gothic"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Escribe el año y el mes de nacimiento o seleciona la fecha"
                    android:textColor="@color/Gris1"
                    android:textSize="15sp"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:gravity="left"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_pets_black"
                            android:layout_marginRight="20dp"
                            />

                        <EditText
                            android:id="@+id/aniosAct"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/gothic"
                            android:hint="Años"
                            android:inputType="number"
                            android:letterSpacing="0.1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textColorHint="@color/textColorGris" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Años"
                            android:textSize="12dp"
                            ></TextView>

                        <EditText
                            android:id="@+id/mesesAct"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:fontFamily="@font/gothic"
                            android:hint="Meses"
                            android:inputType="number"
                            android:letterSpacing="0.1"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textColorHint="@color/textColorGris" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meses"
                            android:textSize="12dp"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/calendario_tambor"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:gravity="center"
                            android:fontFamily="@font/gothic"
                            android:textAlignment="center"
                            android:textColor="@color/textColorGris"
                            android:textSize="17dp"
                            android:text="Fecha de nacimiento"
                            />
                    </LinearLayout>



                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Selecciona el tamaño."
                    android:textColor="@color/Gris1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"

                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_pets_black" />

                <Spinner
                    android:id="@+id/peso_mascotaAct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gothic"
                    android:theme="@style/SpinnerItem"
                    />
            </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Selecciona la especie animal."
                    android:textColor="@color/Gris1"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"

                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_raza_osc" />
                <Spinner
                    android:id="@+id/spinner_especies"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gothic"
                    android:theme="@style/SpinnerItem"
                    />
            </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="30dp"
                    android:text="Selecciona la raza."
                    android:textColor="@color/Gris1"

                    />

            <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:layout_marginRight="20dp"
                 android:layout_marginLeft="20dp"
                 android:gravity="center"
                 android:orientation="horizontal">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_raza_osc" />

                <Spinner
                    android:id="@+id/razaAct"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/gothic"
                    android:theme="@style/SpinnerItem"
                    />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_act_masc"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/boton"
                    android:fontFamily="@font/pizzadude"
                    android:text="Actualizar"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimaryDark"></Button>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>